generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt  @id @default(autoincrement())
  email    String  @unique @db.String(255)
  name     String  @db.String(255)
  password String  @db.String
  code     String? @db.String(6)

  cartItems CartItem[]
  sessions  Session[]

  @@index(email)
}

model Session {
  id        String   @id @default(cuid()) @db.String(30)
  userId    BigInt
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Item {
  id          BigInt   @id @default(autoincrement())
  imageUrl    String   @db.String(255)
  detailsList String[] @db.String(127)
  price       Int
  available   Boolean

  carts      CartItem[]
  ItemDetail ItemDetail[]
}

model ItemDetail {
  id     BigInt @id @default(autoincrement())
  value  String @db.String(255)
  Item   Item   @relation(fields: [itemId], references: [id])
  itemId BigInt
}

model CartItem {
  user           User             @relation(fields: [userId], references: [id])
  userId         BigInt
  Item           Item             @relation(fields: [itemId], references: [id])
  itemId         BigInt
  quantity       Int
  details        String[]
  createdAt      DateTime         @default(now())
  CartItemDetail CartItemDetail[]

  @@id([userId, itemId])
}

model CartItemDetail {
  cartUserId BigInt
  cartItemId BigInt

  cartItem CartItem @relation(fields: [cartUserId, cartItemId], references: [userId, itemId])

  @@id([cartUserId, cartItemId])
}
